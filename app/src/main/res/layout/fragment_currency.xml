<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:background="@drawable/background"
      android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.07">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="center"
          >
        <TextView
            android:text=""
            android:textSize="@dimen/balancetxt"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

      </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="0.93"
        android:background="@drawable/white_cornered_rect"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:orientation="vertical"
              android:layout_weight="1">
            <LinearLayout
                android:paddingLeft="13sp"
                android:paddingRight="13sp"
                android:paddingTop="4sp"
                android:paddingBottom="4sp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:background="@color/white"
                >

              <RelativeLayout
                  android:gravity="center"
                  android:layout_weight="0.5"
                  android:layout_width="0dp"
                  android:layout_height="match_parent" >
                <ImageView
                    android:id="@+id/icon"
                    android:src="@drawable/bitcoin"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
              </RelativeLayout>

              <LinearLayout
                  android:layout_weight="0.5"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:weightSum="2"
                  android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:text="Bitcoin"
                    android:gravity="bottom"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/rate"
                    android:text="40000"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textStyle="bold" />

              </LinearLayout>

              <TextView
                  android:id="@+id/total"
                  android:layout_weight="1"
                  android:text="K20000"
                  android:textSize="24dp"
                  android:layout_width="0dp"
                  android:gravity="right"
                  android:paddingHorizontal="@dimen/profile_padding"
                  android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  />

            </LinearLayout>
            <LinearLayout
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>


          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:orientation="vertical"
              android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:weightSum="2"
                android:orientation="horizontal"
              >
              <TextView
                  android:layout_width="0dp"
                  android:layout_marginHorizontal="40dp"
                  android:textColor="@color/white"
                  android:text="@string/buy"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:layout_height="@dimen/btn_height"
                android:background="@drawable/light_btn"
                android:layout_weight="1"/>
              <TextView
                  android:text="@string/sell_send"
                  android:gravity="center"
                  android:textColor="@color/white"
                  android:layout_gravity="center"
                  android:layout_marginHorizontal="40dp"
                  android:layout_width="0dp"
                  android:layout_height="@dimen/btn_height"
                  android:background="@drawable/light_btn"
                  android:layout_weight="1"/>

            </LinearLayout>

          </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

  </LinearLayout>

</ScrollView>